{
  "name": "json-value-editor",
  "displayName": "JSON Value Editor",
  "publisher": "GuoZhihai",
  "description": "Tree based JSON config editor with schema-aware editing.",
  "icon": "media/config_editor.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/guozhihai/json_editor.git"
  },
  "license": "MIT",
  "version": "0.1.7",
  "engines": {
    "vscode": "^1.106.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:config-editor.openVisualEditor"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "config-editor.openVisualEditor",
        "title": "Open JSON Editor Panel",
        "shortTitle": "Open Panel"
      }
    ],
    "menus": {},
    "configuration": {
      "title": "Config Editor",
      "properties": {
        "configEditor.schemaSuffix": {
          "type": "string",
          "default": "_Schema",
          "description": "Suffix appended to the base file name when automatically locating schema files."
        },
        "configEditor.schemaSearchPaths": {
          "type": "array",
          "description": "Additional folders that should be scanned for schema files. Relative paths are resolved from the workspace root.",
          "items": {
            "type": "string"
          },
          "default": []
        },
        "configEditor.indentSize": {
          "type": "number",
          "default": 2,
          "minimum": 0,
          "description": "Number of spaces used when Config Editor writes JSON changes."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "dependencies": {
    "jsonc-parser": "^3.2.0"
  },
  "devDependencies": {
    "@types/vscode": "^1.106.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "^9.36.0",
    "esbuild": "^0.25.10",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
